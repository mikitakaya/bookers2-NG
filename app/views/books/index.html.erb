<h1>books/index</h1>

<main>
 <p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    img
    <table class="table">
     <tbody>

      <tr></tr>
      <tr>
       <th>name</th>
       <th>特定ユーザーの名前</th>
      </tr>

      <tr>
       <th>introduction</th>
       <th>自己紹介文</th>
      </tr>
     </tbody>
    </table>

    <div class="row">編集ボタン</div>


    <h2 class="mt-3">New book</h2>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>
     <div class="form-group">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
     </div>

     <div class="form-group">
      <label for="book_opinion">Opinion</label><br>
      <%= f.text_area :body %>
     </div>

     <div clas="form-group">
      <%= link_to 'Create Book', books_path, class: "btn btn-success" %>
     </div>
    <% end %>
   </div>
  </div>
 </div>


 <div class="col-md-8 offset-md-1">
  <h2>Books</h2>

  <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>

   <% @books.each do |book| %>
    <tbody>
     <tr>
      <td><%= link_to "book.title", book_path(book.id), class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
     </tr>
    </tbody>
   <% end %>
  </table>

 </div>

</main>